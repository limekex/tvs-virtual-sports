{
  "name": "tvs-virtual-sports",
  "private": true,
  "version": "0.1.0",
  "description": "Build tooling for TVS Virtual Sports plugin",
  "scripts": {
    "build:app": "esbuild src/index.js --bundle --minify --sourcemap --format=iife --outfile=public/js/tvs-app.js",
    "build:block:my-activities": "esbuild src/blocks/my-activities/view.js --bundle --minify --sourcemap --format=iife --outfile=public/js/tvs-block-my-activities.js",
    "build:block:route-insights": "esbuild src/blocks/route-insights/view.js --bundle --minify --sourcemap --format=iife --outfile=public/js/tvs-block-route-insights.js",
    "build:block:personal-records": "esbuild src/blocks/personal-records/view.js --bundle --minify --sourcemap --format=iife --outfile=public/js/tvs-block-personal-records.js",
    "build:block:activity-heatmap": "esbuild src/blocks/activity-heatmap/view.js --bundle --minify --sourcemap --format=iife --outfile=public/js/tvs-block-activity-heatmap.js",
    "build": "npm run build:app && npm run build:block:my-activities && npm run build:block:route-insights && npm run build:block:personal-records && npm run build:block:activity-heatmap",
    "dev:app": "esbuild src/index.js --bundle --sourcemap --format=iife --outfile=public/js/tvs-app.js --watch",
    "dev:block:my-activities": "esbuild src/blocks/my-activities/view.js --bundle --sourcemap --format=iife --outfile=public/js/tvs-block-my-activities.js --watch",
    "dev:block:route-insights": "esbuild src/blocks/route-insights/view.js --bundle --sourcemap --format=iife --outfile=public/js/tvs-block-route-insights.js --watch",
    "dev:block:personal-records": "esbuild src/blocks/personal-records/view.js --bundle --sourcemap --format=iife --outfile=public/js/tvs-block-personal-records.js --watch",
    "dev:block:activity-heatmap": "esbuild src/blocks/activity-heatmap/view.js --bundle --sourcemap --format=iife --outfile=public/js/tvs-block-activity-heatmap.js --watch",
    "dev": "npm-run-all -p dev:app dev:block:my-activities dev:block:route-insights dev:block:personal-records dev:block:activity-heatmap"
  },
  "devDependencies": {
    "esbuild": "0.17.19",
    "npm-run-all": "4.1.5",
    "react-icons": "4.12.0"
  }
}
